{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.ts",
    "**/*.config.ts",
    "**/*.config.cjs",
    "**/*.config.mjs"
  ],
  "exclude": ["node_modules", "dist", "build", "public"]
}
